@using System.Linq

@model FeatureDemandPlanning.Model.ViewModel.HomeViewModel

@if (Model.LatestNews.Count() == 0)
{
    <div class="row inverse" style="font-size:0.8em;">
        <div class="col-lg-12">
            No news available
        </div>
    </div>
}

@foreach (var news in Model.LatestNews.Take(2))
{
    <div class="row inverse" style="font-size:0.8em;">
        <div class="col-md-12">
            <blockquote style="padding:0px 20px;margin:0px 0px 10px">
                
                <h5>@news.Headline</h5>
                
                <p style="font-size:10px;">
                    <span class="quotation-mark">“</span> 
                    @string.Format("{0}...", new string(news.Body.ToCharArray().Take(100).ToArray()))
                    <span class="quotation-mark">”</span>
                </p>
                <footer style="font-size:10px;">Posted on @(news.CreatedOn.Value.ToString("D")) by @news.CreatedBy </footer>
            </blockquote>
        </div>
    </div>
}