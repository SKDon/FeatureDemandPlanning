@model FeatureDemandPlanning.Model.ViewModel.HomeViewModel

@if (!Model.LatestTakeRateData.Any())
{
    <div class="row inverse" style="font-size:0.8em;">
        <div class="col-lg-12">
            No forecast information available
        </div>
    </div>
}
@foreach (var forecast in Model.LatestForecasts.Take(2))
{
    <div class="row inverse" style="font-size:0.8em;">
        <div class="col-lg-12">
            <blockquote style="padding:0px 20px;margin:0px 0px 10px">
                <h5>@string.Format("{0} - {1}, {2}", forecast.Code, forecast.ModelYear, forecast.Gateway)</h5>
                <footer style="font-size:10px;">Created on @(forecast.CreatedOn.ToString("D")) by @forecast.CreatedBy </footer>
            </blockquote>
        </div>
    </div>
}
