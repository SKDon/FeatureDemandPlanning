@using FeatureDemandPlanning.Model.Extensions

@model FeatureDemandPlanning.Model.ViewModel.DerivativeMappingViewModel

<form>
    <input id="Action_IdentifierPrefix" type="hidden" value="@Model.IdentifierPrefix" />
</form>
<div class="well col-xs-12">
    <div class="col-xs-4 text-right">
        <strong>Import Derivative:</strong>
    </div>
    <div class="col-xs-8">
        @Model.DerivativeMapping.ImportDerivativeCode
    </div>
    <div class="col-xs-4 text-right">
        <strong>Programme:</strong>
    </div>
    <div class="col-xs-8">
        @Model.DerivativeMapping.Programme.GetDisplayString()
    </div>
    <div class="col-xs-4 text-right" style="margin-bottom:15px">
        <strong>Gateway:</strong>
    </div>
    <div class="col-xs-8" style="margin-bottom:15px">
        @Model.DerivativeMapping.Gateway
    </div>
    <div class="col-xs-4 text-right">
        <strong>Mapped Derivative:</strong>
    </div>
    <div class="col-xs-8">
        @Model.DerivativeMapping.DerivativeCode
    </div>
    <div class="col-xs-4 text-right">
        <strong>Body:</strong>
    </div>
    <div class="col-xs-8">
        @Model.DerivativeMapping.Body.Name
    </div>
    <div class="col-xs-4 text-right">
        <strong>Engine:</strong>
    </div>
    <div class="col-xs-8">
        @Model.DerivativeMapping.Engine.Name
    </div>
    <div class="col-xs-4 text-right">
        <strong>Transmission:</strong>
    </div>
    <div class="col-xs-8">
        @Model.DerivativeMapping.Transmission.Name
    </div>
 </div>
