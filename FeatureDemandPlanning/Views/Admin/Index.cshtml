@section PageScripts{
    <script src="@Url.Content("~/Scripts/Admin/admin.js")?v=@FeatureDemandPlanning.Models.SharedModelBase.CurrentVersion"></script>
}

@section PageContentHeader
{
<div class="row">
    <div class="col-lg-12 text-center inverse">
        <img src="~/Content/Images/Icons/admin128_coloured.png" style="opacity:0.9;border:0" />

        <h1 style="height:66px">Administration</h1>
        <p style="height:60px">Perform administration activities within FDP</p>

    </div>
</div>
}

@section PageBody
{
    <div class="row">


        <div class="col-lg-2 col-lg-offset-2 text-center inverse">
            <a href="@Url.Action("Market", "Market")">
                <img src="~/Content/Images/Icons/market64.png" style="opacity:0.9;border:0" />
            </a>
            <h2 style="height:66px">Top Markets</h2>
            <p style="height:60px">Configure the top markets for forecasting</p>
            <p><a class="btn btn-default" href="@Url.Action("Market", "Market")" role="button">Top Markets</a></p>
        </div>
        <div class="col-lg-2 text-center inverse">
            <a href="@Url.Action("EngineCodeMapping", "EngineCodeMapping")">
                <img src="~/Content/Images/Icons/mapping64.png" style="opacity:0.9;border:0" />
            </a>
