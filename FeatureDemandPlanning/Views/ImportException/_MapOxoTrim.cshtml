@using enums = FeatureDemandPlanning.Model.Enumerations

@model FeatureDemandPlanning.Model.ViewModel.ImportViewModel

@{
    var additionalData = Model.CurrentException.AdditionalData;
    var modelElements = additionalData.Split('|');
    var bmc = modelElements[0];
    var dpck = modelElements[1];
    var trimLevel = Model.AvailableTrim.FirstOrDefault(d => d.BMC == bmc && d.DPCK == dpck);
}

<div class="alert alert-info">
    <div class="row">
        <div class="col-lg-1 text-center">
            <span class="glyphicon glyphicon-info-sign"></span>
        </div>
        <div class="col-lg-11">
            <p>Map OXO model to historic data.</p>
            <p>Click <strong>'OK'</strong> to continue.</p>
        </div>
    </div>
</div>

@Html.Partial("_ImportActionHeader", Model)

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">Mapping</div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-4" for="@(Model.IdentifierPrefix)_SelectTrimLevel">Historic Trim:</label>
                <div class="col-sm-8">
                    <select class="form-control sm" id="@(Model.IdentifierPrefix)_TrimLevelList" multiple="multiple">
                        @foreach (var importTrim in Model.AvailableImportTrimLevels.Where(i => i.BMC == bmc))
                        {
                            <option value="@importTrim.Identifier">@importTrim.Identifier</option>
                        }
                    </select>

                </div>
            </div>
        </form>
    </div>
</div>

<form>
    <input type="hidden" id="@(Model.IdentifierPrefix)_DPCK" value="@bmc|@dpck|@trimLevel.Id"/>
</form>

