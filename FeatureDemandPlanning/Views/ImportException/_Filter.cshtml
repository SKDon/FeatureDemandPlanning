<div class="panel panel-primary inverse" style="margin-bottom: 0;height:160px;background-color:rgba(18, 7, 59, 0.75);">
    <div class="panel-heading">
        <div class="panel-title">Filter</div>
    </div>
    <div class="panel-body" style="background:none !important">
        <form class="form-horizontal">
            <div class="form-group-sm">
                <label for="@(Model.IdentifierPrefix)_ExceptionType" class="form-label col-xs-4 text-right" style="margin-top:5px">Type:</label>
                <div class="col-xs-8">
                    <button id="@(Model.IdentifierPrefix)_SelectExceptionType" type="button" class="btn btn-sm btn-default dropdown-toggle col-sm-12" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span id="@(Model.IdentifierPrefix)_SelectedExceptionType">All</span>
                        <span class="caret"></span>
                    </button>
                    <ul id="@(Model.IdentifierPrefix)_ExceptionTypeList" class="dropdown-menu">
                        @foreach (var availableExceptionType in Model.AvailableExceptionTypes)
                        {
                            <li><a class="type-item" href="#" data-target="@((int)availableExceptionType.ExceptionType))" data-content="@availableExceptionType.Type">@availableExceptionType.Type</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="vertical-spacer" style="height:40px"></div>
            <div class="form-group-sm">
                <label for="@(Model.IdentifierPrefix)_FilterMessage" class="form-label col-xs-4 text-right" style="margin-top:5px">Message:</label>
                <div class="col-xs-8">
                    <input type="text" id="@(Model.IdentifierPrefix)_FilterMessage" class="form-control" />
                </div>

            </div>
        </form>
    </div>
</div>



