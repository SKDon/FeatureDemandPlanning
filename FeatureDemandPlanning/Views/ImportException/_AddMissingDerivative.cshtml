@using enums = FeatureDemandPlanning.Model.Enumerations

@model FeatureDemandPlanning.Model.ViewModel.ImportViewModel

<div class="alert alert-info">
    <div class="row">
        <div class="col-lg-1 text-center">
            <span class="glyphicon glyphicon-info-sign"></span>
        </div>
        <div class="col-lg-11">
            <p>Add missing derivative details below.</p>
            <p>Click <strong>'OK'</strong> to continue.</p>
        </div>
    </div>
</div>

@Html.Partial("_ImportActionHeader", Model)

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">New Derivative Details</div>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-4" for="@(Model.IdentifierPrefix)_SelectBody">Body:</label>
                <div class="col-sm-8">
                    <button id="@(Model.IdentifierPrefix)_SelectBody" type="button" class="btn btn-sm btn-default dropdown-toggle col-sm-12" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span id="@(Model.IdentifierPrefix)_SelectedBody">Select Body</span>
                        <span class="caret"></span>
                    </button>
                    <ul id="@(Model.IdentifierPrefix)_BodyList" class="dropdown-menu">
                        @foreach (var body in Model.AvailableBodies)
                        {
                            <li><a class="body-item" href="#" data-target="@body.Id" data-content="@body.Name">@body.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="@(Model.IdentifierPrefix)_SelectEngine">Engine:</label>
                <div class="col-sm-8">
                    <button id="@(Model.IdentifierPrefix)_SelectEngine" type="button" class="btn btn-sm btn-default dropdown-toggle col-sm-12" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span id="@(Model.IdentifierPrefix)_SelectedEngine">Select Engine</span>
                        <span class="caret"></span>
                    </button>
                    <ul id="@(Model.IdentifierPrefix)_EngineList" class="dropdown-menu">
                        @foreach (var engine in Model.AvailableEngines)
                        {
                            <li><a class="engine-item" href="#" data-target="@engine.Id" data-content="@engine.Name">@engine.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="@(Model.IdentifierPrefix)_SelectTransmission">Transmission:</label>
                <div class="col-sm-8">
                    <button id="@(Model.IdentifierPrefix)_SelectTransmission" type="button" class="btn btn-sm btn-default dropdown-toggle col-sm-12" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span id="@(Model.IdentifierPrefix)_SelectedTransmission">Select Transmission</span>
                        <span class="caret"></span>
                    </button>
                    <ul id="@(Model.IdentifierPrefix)_TransmissionList" class="dropdown-menu">
                        @foreach (var transmission in Model.AvailableTransmissions)
                        {
                            <li><a class="transmission-item" href="#" data-target="@transmission.Id" data-content="@transmission.Name">@transmission.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>

