@model FeatureDemandPlanning.Model.ViewModel.UserViewModel

<form>
    <input id="Action_IdentifierPrefix" type="hidden" value="@Model.IdentifierPrefix" />
</form>

<form role="form" class="form-horizontal">
    <div class="form-group">
        <label for="@(Model.IdentifierPrefix)_CDSId" class="form-label col-lg-4 text-right" style="margin-top:8px">Username:</label>
        <p id="@(Model.IdentifierPrefix)_CDSId" class="form-control-static">@Model.User.CDSId</p>
    </div>
    <div class="form-group">
        <label for="@(Model.IdentifierPrefix)_ViewProgrammes" class="form-label col-lg-4 text-right" style="margin-top:8px">Programmes:</label>
        <button id="@(Model.IdentifierPrefix)_ViewProgrammes" class="btn btn-default dropdown-toggle col-lg-7" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span id="@(Model.IdentifierPrefix)_SelectedViewProgrammes">Select Available Programmes</span>
            <span class="caret"></span>
        </button>
        <select class="dropdown-menu" multiple="multiple">
            @foreach (var carLine in Model.CarLines)
            {
                <optgroup label="@string.Format("{0} - {1}", carLine.VehicleAKA, carLine.VehicleName)">
                    @foreach (var programme in Model.Programmes.Where(p => p.VehicleId == carLine.VehicleId))
                    {
                        <option value="@programme.ModelYear">@programme.ModelYear</option>
                    }
                </optgroup>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="@(Model.IdentifierPrefix)_EditProgrammes" class="form-label col-lg-4 text-right" style="margin-top:8px">Markets:</label>
        <button id="@(Model.IdentifierPrefix)_EditProgrammes" class="btn btn-default dropdown-toggle col-lg-7" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span id="@(Model.IdentifierPrefix)_SelectedEditProgrammes">Select Available Markets</span>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li>Test</li>
        </ul>
    </div>
</form>
