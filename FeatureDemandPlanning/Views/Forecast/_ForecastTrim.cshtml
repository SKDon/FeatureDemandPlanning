@using FeatureDemandPlanning.BusinessObjects;
@using enums = FeatureDemandPlanning.Enumerations;

@model FeatureDemandPlanning.Models.ForecastComparisonViewModel

<div id="#forecastTrimDialog"></div>

<div class="col-lg-12" data-index="2">
    <div class="panel panel-primary">

        <div class="panel-heading">
            <div class="panel-title">Trim Level</div>

        </div>

        <div class="panel-body">

            <table class="table table-striped table-bordered table-responsive dataTable">
                <thead>
                    <tr>
                        <th colspan="2">
                            <p>Vehicle</p>
                        </th>
                        <th colspan="@(Model.Forecast.ForecastVehicle.TrimMappings.Count())"><p class="text-center">Level</p></th>
                    </tr>
                    <tr>
                        <th>
                            <p>@Model.Forecast.ForecastVehicle.Description</p>
                        </th>
                        <th>
                            <p class="text-center">@Model.Forecast.ForecastVehicle.ModelYear</p>
                        </th>
                        @foreach (var trimMapping in Model.Forecast.ForecastVehicle.TrimMappings)
                        {
                            <th>
                                <div class="text-center">
                                    <p>@trimMapping.ForecastVehicleTrim.Abbreviation</p>
                                    @if (!string.IsNullOrEmpty(trimMapping.ForecastVehicleTrim.DPCK))
                                    {
                                        <small>(@trimMapping.ForecastVehicleTrim.DPCK)</small>
                                    }
                                </div>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comparisonVehicle in Model.NonEmptyComparisonVehicles)
                    {
                        <tr>
                            <td>@(comparisonVehicle.VehicleIndex). @comparisonVehicle.Vehicle.Description</td>
                            <td class="dataTable-vertical-seperator"><p class="text-center">@comparisonVehicle.Vehicle.ModelYear</p></td>

                            @foreach (var trimMapping in Model.Forecast.ForecastVehicle.TrimMappings)
                            {
                                <td class="text-center">
                                    <a href="#" data-toggle="modal" data-target="#modal">
                                        Select Trim
                                    </a>
                                    @*<a class="forecast-trim-link" href="#" data-index="@(comparisonVehicle.VehicleIndex)" data-forecast-trim="@(trimMapping.ForecastVehicleTrim.Id)">Select Trim</a>*@
                                    @*@Html.Partial("_ForecastTrimSelect", Model, new ViewDataDictionary { { "CurrentVehicle", comparisonVehicle }, { "ForecastTrim", forecastTrim } })*@
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>