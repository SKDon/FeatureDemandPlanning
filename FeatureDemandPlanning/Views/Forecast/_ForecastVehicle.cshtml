@using FeatureDemandPlanning.BusinessObjects
@using enums = FeatureDemandPlanning.Enumerations

@model FeatureDemandPlanning.Models.ForecastComparisonViewModel

<div class="row subscribers-notifyFilterComplete" data-index="0">
    <div class="col-lg-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">Forecast Vehicle</div>
            </div>

            <div class="panel-body">

                <div class="row subscribers-notifyVehicle subscribers-notifyValidation vehicle-filter" data-index="0" data-val="Forecast" style="display:block">

                    <div class="col-lg-4">
                        @Html.DropDownListFor(m => m.Forecast.ForecastVehicle.Make, Model.ForecastVehicleLookup.Makes, 
                            new {
                                @id = "ddlMake",
                                @name = "Make",
                                @class = "subscribers-notifyMakes vehicle-filter-make",
                                @style = "display:none",
                                @data_index = "0"
                            })
                        <label class="control-label inverse" for="ddlProgramme">Vehicle</label>
                        @Html.DropDownListFor(m => m.Forecast.ForecastVehicle.Code, Model.ForecastVehicleLookup.Programmes,
                            new
                            {
                                @id = "ddlProgramme",
                                @name = "Programme",
                                @class = "form-control subscribers-notifyProgrammes vehicle-filter-programme",
                                @data_index = "0"
                            })
                    </div>

                    <div class="col-lg-4">
                        <label class="control-label inverse" for="ddlModelYear">Model Year</label>
                        @Html.DropDownListFor(m => m.Forecast.ForecastVehicle.ModelYear, Model.ForecastVehicleLookup.ModelYears,
                            new
                            {
                                @id = "ddlModelYear",
                                @name = "ModelYear",
                                @class = "form-control subscribers-notifyModelYears vehicle-filter-modelYear",
                                @data_index = "0"
                            })
                    </div>

                    <div class="col-lg-4">
                        <label class="control-label inverse" for="ddlGateway">Gateway</label>
                        @Html.DropDownListFor(m => m.Forecast.ForecastVehicle.Gateway, Model.ForecastVehicleLookup.Gateways,
                            new
                            {
                                @id = "ddlGateway",
                                @name = "Gateway",
                                @class = "form-control subscribers-notifyGateways vehicle-filter-gateway",
                                @data_index = "0"
                            })
                    </div>

                </div>

                <div class="row subscribers-notifyVehicle vehicle-readonly" data-index="0" style="display:none">
                    <div class="col-lg-4">
                        <label class="control-label inverse" for="lblProgramme">Programme</label>
                        <p id="lblProgramme" class="subscribers-notifyVehicle vehicle-readonly vehicle-readonly-programme" data-index="0"></p>
                    </div>

                    <div class="col-lg-4">
                        <label class="control-label inverse" for="lblModelYear">Model Year</label>
                        <p id="lblModelYear" class="subscribers-notifyVehicle vehicle-readonly vehicle-readonly-modelYear" data-index="0"></p>
                    </div>

                    <div class="col-lg-4">
                        <label class="control-label inverse" for="lblGateway">Gateway</label>
                        <p id="lblGateway" class="subscribers-notifyVehicle vehicle-readonly vehicle-readonly-gateway" data-index="0"></p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
