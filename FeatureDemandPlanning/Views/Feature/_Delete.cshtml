@using FeatureDemandPlanning.Model.Extensions

@model FeatureDemandPlanning.Model.ViewModel.FeatureViewModel

<form>
    <input id="Action_IdentifierPrefix" type="hidden" value="@Model.IdentifierPrefix" />
</form>
<div class="well col-xs-12">
    <div class="col-xs-4 text-right">
        <strong>Feature:</strong>
    </div>
    <div class="col-xs-8">
        @Model.Feature.FeatureCode
    </div>
    <div class="col-xs-4 text-right">
        <strong>Programme:</strong>
    </div>
    <div class="col-xs-8">
        @Model.Feature.Programme.GetDisplayString()
    </div>
    <div class="col-xs-4 text-right">
        <strong>Gateway:</strong>
    </div>
    <div class="col-xs-8">
        @Model.Feature.Programme.Gateway
    </div>
    <div class="col-xs-4 text-right">
        <strong>Brand Description:</strong>
    </div>
    <div class="col-xs-8">
        @Model.Feature.BrandDescription
    </div>
 </div>
