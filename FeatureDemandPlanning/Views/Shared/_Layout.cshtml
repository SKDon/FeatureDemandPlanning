@using FeatureDemandPlanning.Model
@{
    var currentVersion = SharedModelBase.CurrentVersion;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Feature Demand Planning</title>

    @Styles.Render("~/bundles/css/bootstrap")
    @Styles.Render("~/bundles/site/css")

    @RenderSection("PageStyles", false)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <h1 class="navbar-brand metal linear">
                    <a href="@Url.Action("Index", "Home")">
                        F.D.P
                    </a>
                </h1>

            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input class="form-control" placeholder="Search" type="text">
                    </div>
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </form>
                <div class="pull-left breadcrumb">
                    @Html.MvcSiteMap().SiteMapPath()
                </div>
                <ul class="nav navbar-nav pull-right">
                    <li>
                        <a href="@Url.Action("Index", "Admin")">
                            <span class="glyphicon glyphicon-cog"></span> Settings
                        </a>
                    </li>
                </ul>
                <div class="nav navbar-nav navbar-right" style="position:relative;width:230px;height:60px;">
                    <img class="navbar-right" src="~/Content/Images/Brand/jag_logo_transparent.png" style="position:absolute;left:0;bottom:0;" />
                    <img class="navbar-right" src="~/Content/Images/Brand/lr_logo_v2_transparent.png" style="position:absolute;left:108px;bottom:0;" />
                </div>
            </div>
        </div>
    </nav>

    <div class="carousel-overlay">
        <div class="carousel-overlay-parent"></div>
    </div>

    <div id="backgroundCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#backgroundCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#backgroundCarousel" data-slide-to="1"></li>
            <li data-target="#backgroundCarousel" data-slide-to="2"></li>
            <li data-target="#backgroundCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="first-slide" src="~/Content/Images/Carousel/1.png" alt="First slide">

            </div>
            <div class="item">
                <img class="second-slide" src="~/Content/Images/Carousel/2.png" alt="Second slide">
            </div>
            <div class="item">
                <img class="third-slide" src="~/Content/Images/Carousel/3.png" alt="Third slide">
            </div>
            <div class="item">
                <img class="fourth-slide" src="~/Content/Images/Carousel/4.png" alt="Fourth slide">
            </div>
        </div>
        <a class="left carousel-control" href="#backgroundCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="right carousel-control" href="#backgroundCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div id="body" class="container body-content-header">
        <div id="viewport">
            @RenderSection("PageBody", true)
        </div>
    </div>

    <div id="footer">
        <div id="h-slider"></div>
        @RenderSection("PageFooter", false)
    </div>
    <div id="v-slider"></div>
    @*@Scripts.Render("~/bundles/shared")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryform")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/Shared/oxo-master.js")?v=@currentVersion"></script>
    @RenderSection("PageScripts", required: false)*@

    @Scripts.Render("~/bundles/shared")
    <script src="~/Content/jquery/js/jquery-2.1.4.min.js"></script>
    @Scripts.Render("~/bundles/js/dataTables")
    @Scripts.Render("~/bundles/js/bootstrap")
    @RenderSection("PageScripts", required: false)

    <script>
        // interval is in milliseconds. 1000 = 1 second - so 1000 * 10 = 10 seconds
        $(function () {
            $('.carousel').carousel({
                interval: 1000 * 10
            });
        });
    </script>
</body>
</html>
