@using FeatureDemandPlanning.BusinessObjects
@using enums = FeatureDemandPlanning.Enumerations

@model FeatureDemandPlanning.Models.ImportViewModel

    @if (Model.CurrentException.ErrorType == enums.ImportExceptionType.MissingMarket)
    {
        <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="1"><span class="glyphicon glyphicon-random pull-left"></span> Map to OXO market</a></li>
    }
    
    @if (Model.CurrentException.ErrorType == enums.ImportExceptionType.MissingDerivative)
    {
        <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="2"><span class="glyphicon glyphicon-plus pull-left"></span> Add new derivative</a></li>
        <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="3"><span class="glyphicon glyphicon-random pull-left"></span> Map to existing OXO derivative</a></li>
    }
    
    @if (Model.CurrentException.ErrorType == enums.ImportExceptionType.MissingFeature)
    {
        <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="4"><span class="glyphicon glyphicon-plus pull-left"></span> Add new feature</a></li>
        <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="5"><span class="glyphicon glyphicon-random pull-left"></span> Map to existing OXO feature</a></li>
    }
    
    @if (Model.CurrentException.ErrorType == enums.ImportExceptionType.MissingTrim)
    {
        <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="6"><span class="glyphicon glyphicon-plus pull-left"></span> Add new trim</a></li>
        <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="7"><span class="glyphicon glyphicon-random pull-left"></span> Map to existing OXO trim</a></li>
    }
    
    <li class="divider"></li>
    <li><a tabindex="-1" href="#" data-target="@Model.CurrentException.FdpImportErrorId" data-action="8"><span class="glyphicon glyphicon-remove pull-left"></span> Ignore Error</a></li>
